extends layout 

block content 

    h1 #{title}

    if categoryItems.length 
      p #[strong Delete the following rental items before attempting to delete this category.] 
      div 
        h3 Rental Items: 
        dl 
          each item in categoryItems 
            dt
              a(href=item.url) #{item.name}
    else
      p Do you really want to delete this Category?

      form(method="POST")
        input(type="hidden" name="categoryid" value=category._id)
        button(type="submit") Delete
