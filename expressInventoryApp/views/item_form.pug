extends layout 

block content 

    h1 #{title}

    form(method="POST")
      div
        label(for="name") Rental Item:    
        input(type="text" name="name" required value=(undefined=== item ? "" : item.name))
        br
        label(for="description") Description:    
        input(type="text" name="description" required value=(undefined=== item ? "" : item.description))
        br
        label(for="category") Category: 
        input(type="text" name="category" required value=(undefined=== item ? "" : item.category.name))
        br
        label(for="price") Price:    
        input(type="text" name="price" required value=(undefined=== item ? "" : item.price))
        br
        label(for="stockNumber") Stock Number:    
        input(type="text" name="stockNumber" required value=(undefined=== item ? "" : item.stockNumber))
        br
      button(type="submit") Submit 

    if errors 
      ul 
        for error in errors 
          li!= error.msg